# находим длину каждого слова в списке
a = ["олле-лукое", "абра", "кадабра", "бумс"]
print(list(map(len, a)))

# меняем все символы в списке на заглавные
a = ["это", "слишком", "маленький", "текст"]
print(list(map(str.upper, a)))

# меняем все символы в списке на прописные
a = ["ПРИВЕТ", "ВСЕМ", "УЧАСТНИКАМ", "СОРЕВНОВАНИЙ"]
print(list(map(str.lower, a)))
